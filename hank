#!/bin/bash

quotes="/usr/share/doc/hank/hankquotes"
if [ -f "$quotes" ]
then
cat << HANK
         ,-~''~'''''':::::''::::''..
      ,-':::::::::::::::::::::::::::..
     '::::::::::::„:„„-~-~--'~-'~--~-~.
    ,'::::,~'': : : : : : : : : : : '-|
    |:::::,-': : - -~''''¯¯''-„: : : :|
    |:::::| : : : _„„--~'''''~-„: :: '|
    |:::::,': : :_„„-: : : : :~--„_: :|
   |::::::|:„--~~'''~~'''-„…_..„~'''¯\\
   |:::::,'_„„-|:_„---~:|''¯'|: ~---„_|
   .,~-,_/'': |:(_ o__): |: :|:(_o__):/
  ../,'-,:: ''-,_______,-'': ''-„_____|
  ..\: :|: : : : : : :„: : : : :-,:  :|
   ',:': : : : : :,-'__: : : :_',: ; ,'
    '-,-': :___„-: :'': ¯''~~'': '~--|
     |: ,: : :  : : : : : : : : : : :|
     '|: \: : : : -,„_„„-~~--~--„_: :|
      |: \: : : : : : :-------~: : ::/
      |: :''-,: : : : :: : : : : : :|
      ',: : :''-,  : : : : : : : : ,'
      |: : : : : : : : : : : : : ,-'
      |: : :: : '''~----------~''
HANK

RAND=`cat /proc/sys/kernel/random/uuid | cut -c1-4 | od -d | head -1 | cut -d' ' -f2`
LINES=`cat $quotes | wc -l`
LINE=`expr $RAND % $LINES + 1`
head -$LINE $quotes | tail -1
exit 1
else
	echo "No file $file. Go to http://lehomepage.co.nf/hank-instructions for more information."
fi
 
